{
  "name": "@plebbitlabs/mintpass",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "NFT-based authentication system for Plebbit communities",
  "author": "Plebbit Labs",
  "license": "MIT",
  "exports": {
    "./challenge": {
      "types": "./dist/challenge/index.d.ts",
      "default": "./dist/challenge/index.js"
    }
  },
  "workspaces": [
    "contracts",
    "challenge"
  ],
  "scripts": {
    "install:all": "yarn install && yarn install:contracts && yarn install:challenge",
    "install:contracts": "cd contracts && yarn install",
    "install:challenge": "cd challenge && yarn install",
    "build": "yarn build:contracts && yarn build:challenge && yarn publish:challenge",
    "build:contracts": "cd contracts && yarn compile",
    "build:challenge": "cd challenge && yarn build",
    "publish:challenge": "rm -rf dist/challenge && mkdir -p dist/challenge && cp -R challenge/dist/* dist/challenge/",
    "test": "yarn test:contracts",
    "test:contracts": "cd contracts && yarn test",
    "test:challenge": "cd challenge && yarn test",
    "test:challenge:local": "cd challenge && yarn test:local",
    "deploy:base-sepolia": "cd contracts && yarn deploy:base-sepolia",
    "deploy:base": "cd contracts && yarn deploy:base",
    "clean": "yarn clean:contracts && yarn clean:challenge",
    "clean:contracts": "cd contracts && yarn clean",
    "clean:challenge": "cd challenge && yarn clean"
  },
  "keywords": [
    "nft",
    "authentication",
    "plebbit",
    "decentralized",
    "base",
    "ethereum"
  ],
  "dependencies": {
    "@keyv/sqlite": "^4.0.5",
    "@plebbit/plebbit-js": "https://github.com/plebbit/plebbit-js.git#d29c607ca27200467101e64e637755565a5d6c14",
    "env-paths": "^3.0.0",
    "keyv": "5.5.0",
    "viem": "2.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.22"
}
